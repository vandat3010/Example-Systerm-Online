<body>
   
    <div class="courses_banner">
        <div class="container">
            <h3>Login</h3>
            <p class="description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer lorem quam, adipiscing condimentum tristique vel, eleifend sed turpis. Pellentesque cursus arcu id magna euismod in elementum purus molestie.
            </p>
            <div class="breadcrumb1">
                <ul>
                    <li class="icon6"><a href="/Home/Index">Home</a></li>
                    <li class="current-page">Login</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- //banner -->
    <div class="courses_box1">
        <div class="container">
            @using (Html.BeginForm("LogIn", "User", FormMethod.Post, new {   style = "text-align: center;width: 35%; margin: 0 auto;", @class = "myClass" }))
            {
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            <p class="lead">Welcome Back!</p>
            <div class="form-group">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "UserName", @type = "text", @autocomplete = "off" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Password" })
            </div>
            <div class="form-group">
                <label for="remember">
                    @Html.CheckBoxFor(model => model.RememberMe)
                    Remember Me
                </label>
                <input type="submit" class="btn btn-primary btn-lg1 btn-block" name="submit" value="Log In">
            </div>
            <p>Don not have an account? <a href="/User/SignUp" title="Sign Up">Sign Up</a></p>
            }
            <div class="social-auth-links text-center mb-3" style="text-align: center; width: 35%; margin: 0 auto;">
                <p>- OR -</p>
                <a href="/User/LoginFacebook" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                </a>
                <a href="/User/LoginGoogle" class="btn btn-block btn-danger" ">
                    <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                </a>
            </div>
            <p class="mb-1" style="text-align: center; width: 35%; margin: 0 auto;">
                <a href="/User/ForgotPassword">I forgot my password</a>
            </p>

        </div>
    </div>
    
</body>
</html>

