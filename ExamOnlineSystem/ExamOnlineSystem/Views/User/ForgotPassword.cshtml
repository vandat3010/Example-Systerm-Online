@model ExamOnlineSystem.Models.ForgotPasswordModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <body class="hold-transition login-page">
        <div class="login-box">
            <div class="login-logo">
                
            </div>
            <!-- /.login-logo -->
            <div class="card">
                <div class="card-body login-card-body">
                    <h1 style="text-align:center;"><p class="login-box-msg" >You forgot your password? Here you can easily retrieve a new password.</p></h1>

                    @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post, new { style = "text-align: center;width: 35%;margin: 0 auto;" }))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" });
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "v@gmail.com", @type = "email" })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row"  style=" margin: 15px 150px 20px 190px;">
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block" style=" width: 60%;" >Gửi</button>
                            </div>
                            <!-- /.col -->
                        </div>

                    }
                    <p style="margin-right: 44px; text-align: center;">OR</p>
                    <p class="mt-3 mb-1" style="margin-right: 44px; text-align: center;">
                        <a href="/User/Login">Login</a>
                    </p>
                    <p class="mb-0" style="margin-right: 44px; text-align: center;">
                        <a href="/User/SignUp" class="text-center">SingUp</a>
                    </p>

                </div>
                <!-- /.login-card-body -->
            </div>
        </div>
        <!-- /.login-box -->
        <!-- jQuery -->
        <script src="/Assets/Admin/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/Assets/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE App -->
        <script src="/Assets/Admin/dist/js/adminlte.min.js"></script>

    </body>

